{
  "$schema": "https://docs.openclaw.ai/schema/config.json",

  "// 说明": "Friday 的 OpenClaw Gateway 配置。飞书凭证通过环境变量注入，不要写在这里。",

  "agents": {
    "defaults": {
      "workspace": "/workspace",
      "model": "anthropic/claude-sonnet-4-20250514",
      "models": {
        "fast": "anthropic/claude-sonnet-4-20250514",
        "quality": "anthropic/claude-sonnet-4-20250514"
      },
      "skipBootstrap": true
    }
  },

  "channels": {
    "feishu": {
      "enabled": true,
      "dmPolicy": "pairing",
      "groupPolicy": "open",
      "streaming": true,
      "blockStreaming": true,
      "textChunkLimit": 2000,
      "mediaMaxMb": 30
    }
  },

  "gateway": {
    "bind": "0.0.0.0",
    "port": 18789
  },

  "tools": {
    "exec": {
      "enabled": true,
      "applyPatch": true
    }
  }
}
